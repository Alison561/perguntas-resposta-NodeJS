<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <%- include('./includes/header.ejs') %> 
    <div class="container">
        <h1 class="card-title"><%= pergu.titulo %></h1>
        <p class="card-text"><%= pergu.descricao %></p>
        <hr>
        <br>
        <% resp.forEach(value=>{ %>
            <div class="card">
                <div class="card-body">
                  <p class="card-text"><%= value.resposta %></p>
                </div>
            </div>
            <br>
        <% }) %> 
        <form method="POST">
            <div class="form-group">
                <label for="resposta">Resposta</label>
                <textarea name="resposta" placeholder="responda aqui" class="form-control" rows="5" id="resposta"></textarea>
            </div>
            <input name="res" value="Enviar" type="submit" class="btn btn-primary">
        </form>
    </div>
</body>